<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.siva4u.jsbridge"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.siva4u.main.WebViewActivity"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="com.siva4u.main.webview" />
                <action   android:name = "android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.siva4u.main.LoginActivity"
            android:label="@string/title_activity_other"></activity>

        <intent-filter>
            <action android:name="com.siva4u.main.login" />
            <action   android:name = "android.intent.action.DEFAULT" />
        </intent-filter>
        <activity
            android:name="com.siva4u.main.MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
